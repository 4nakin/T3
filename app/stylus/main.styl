@import 'partials/vars'

*
  box-sizing: border-box
  transition: background-color 0.8s ease

#main
  min-height: 100vh
  min-width: 100vw

table
  width: 25vmin
  height: 25vmin
  margin: 1vmin auto

  tr
    background-color: color_bg !important

  &.win1
    border: solid color_p1

  &.win2
    border: solid color_p2

.p1
  background-color: color_p1
  color: color_bg

.p2
  background-color: color_p2
  color: color_bg

.link
  pre
    font-size: 5vmin

.subboard
  -webkit-transition: all 0.8s ease

.playable
  -webkit-transform: scale(1)

.unplayable
  -webkit-transform: scale(0.8)

.statusbar
  max-width: 100%
  background-color: color_status_bg
  text-align: center

  p
    color: color_status_font
    font-family: font_status
    font-size: 6vmin
    font-weight: 800

.splash
  margin: 20vh

  table
    -webkit-transform: scale(1.5)

  td
    background-color: color_status_bg

button
  background-color: color_button

  &:hover
    background-color: color_button_hover
