.game(ng-show="has_started()")
  .row
    .large-10.columns.large-centered
      .panel(ng-show="game.winner > 0", ng-class="{1: 'p1', 2: 'p2'}[game.winner]") Player {{game.winner}} wins!
      .panel(ng-show="game.tie") TIE!
      .panel(ng-show="!game.winner && !game.tie && !your_turn()") Your opponent is thinking...
      .panel(ng-show="!game.winner && !game.tie && your_turn()") Your turn!

  .row
    table
      tbody
        tr(ng-repeat="row in [0,1,2]")
          td(ng-repeat="col in [0,1,2]", ng-class="{1: 'p1', 2: 'p2', 0: 'empty'}[game.board[row][col]]", ng-click="move(row, col)")&nbsp;

  .row
    .large-10.columns.large-centered
      button(ng-show="game.winner > 0 || game.tie", ng-click='newBoard()') Rematch!

.link(ng-show="!has_started()")
  .row
    .large-8.columns.large-centered.panel
      p Send this link to your friend
      pre {{gameURL}}